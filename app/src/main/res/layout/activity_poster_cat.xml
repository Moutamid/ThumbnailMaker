<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg">

    <com.qintong.library.InsLoadingView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round"
        card_view:end_color="#ffc60e0b"
        card_view:start_color="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentLeft="true"
            android:padding="19.0dip"
            android:src="@drawable/btn_new_back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:paddingLeft="5.0dip"
            android:text="SELECT THUMBNAIL"
            android:textAllCaps="true"
            android:textColor="@color/titlecolor"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/iv_ratio_sel"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="end"
            android:padding="8.0dip"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rl_ad"
        android:layout_below="@+id/header" />

    <RelativeLayout
        android:id="@+id/rl_select_cat"
        android:layout_width="200.0dip"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rl_ad"
        android:layout_marginTop="50.0dip"
        android:background="@color/white"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cat_all"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="5.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:text="All"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cat_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/cv_cat_all" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameContainerPoster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:id="@+id/rl_select_ratio"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image_all"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="All"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image1"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1:1"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image2"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="3:4"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image3"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4:3"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image4"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="9:16"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image5"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_margin="1.0dip"
            card_view:cardBackgroundColor="#ffffffff"
            card_view:cardCornerRadius="0.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="16:9"
                android:textSize="18.0dip" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>