<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.freethumbnailmaker.nowatermark">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:name="com.freethumbnailmaker.nowatermark.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.freethumbnailmaker.nowatermark.activity.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>



        <provider
            android:name="com.freethumbnailmaker.nowatermark.utils.GenericFileProvider"
            android:authorities="com.freethumbnailmaker.nowatermark.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.activity.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.ThumbnailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.ThumbCatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.SelectionCategories"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.activity.BaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.MyThumbnailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.ShareImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.BackgrounImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.main.MyDesignActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freethumbnailmaker.nowatermark.eraser.StickerRemoveActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.facebook.ads.AudienceNetworkActivity" android:hardwareAccelerated="true" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
        <meta-data android:name="com.google.android.gms.ads.AD_MANAGER_APP" android:value="true" />
    </application>

</manifest>